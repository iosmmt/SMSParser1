<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础应用主题 -->
    <style name="Theme.ExpressCodeHelper" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- 次要色调 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- 背景色 -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <!-- 表面色 -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <!-- 错误色 -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <!-- 文本样式 -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ExpressCodeHelper.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ExpressCodeHelper.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ExpressCodeHelper.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ExpressCodeHelper.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ExpressCodeHelper.Body2</item>
        <!-- 组件样式 -->
        <item name="textButtonStyle">@style/Widget.ExpressCodeHelper.TextButton</item>
        <item name="elevatedButtonStyle">@style/Widget.ExpressCodeHelper.ElevatedButton</item>
    </style>

    <!-- 文本样式 -->
    <style name="TextAppearance.ExpressCodeHelper.Headline1" parent="TextAppearance.Material3.Headline1">
    </style>
    <style name="TextAppearance.ExpressCodeHelper.Headline2" parent="TextAppearance.Material3.Headline2">
    </style>
    <style name="TextAppearance.ExpressCodeHelper.Headline3" parent="TextAppearance.Material3.Headline3">
    </style>
    <style name="TextAppearance.ExpressCodeHelper.Body1" parent="TextAppearance.Material3.Body1">
    </style>
    <style name="TextAppearance.ExpressCodeHelper.Body2" parent="TextAppearance.Material3.Body2">
    </style>

    <!-- 按钮样式 -->
    <style name="Widget.ExpressCodeHelper.TextButton" parent="Widget.Material3.TextButton">
    </style>
    <style name="Widget.ExpressCodeHelper.ElevatedButton" parent="Widget.Material3.ElevatedButton">
    </style>
</resources>